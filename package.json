{
  "name": "ws-system",
  "version": "0.1.0",
  "description": "Secure WebSocket server with public key authentication",
  "main": "dist/index.js",
  "bin": {
    "ws-manager": "./dist/cli/manager.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:nodemon": "nodemon",
    "postinstall": "npm run build && node -e \"if(process.platform !== 'win32') require('child_process').execSync('chmod +x dist/cli/manager.js')\"",
    "setup": "node dist/cli/manager.js setup",
    "generate-keys": "node dist/cli/manager.js generate-keys",
    "register-client": "node dist/cli/manager.js register-client",
    "list-clients": "node dist/cli/manager.js list-clients",
    "revoke-client": "node dist/cli/manager.js revoke-client",
    "backup-clients": "node dist/cli/manager.js backup-clients",
    "configure-env": "node dist/cli/manager.js configure-env",
    "scan-env": "node dist/cli/manager.js scan-env",
    "manager": "node dist/cli/manager.js",
    "dev:manager": "ts-node src/cli/manager.ts",
    "test": "jest",
    "test:security": "jest security",
    "test:server": "jest server",
    "test:challenge": "jest challenge",
    "test:auth": "jest auth",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:only": "jest -t",
    "docker:build": "docker build -t ws-system .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:restart": "npm run docker:stop && npm run docker:start",
    "docker:logs": "docker-compose logs -f",
    "help": "node scripts/manager.js --help"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "node-fetch": "^2.7.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.6",
    "@types/ws": "^8.5.8",
    "chalk": "^4.1.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

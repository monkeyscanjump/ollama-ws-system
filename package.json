{
  "name": "ollama-ws-system",
  "version": "0.1.0",
  "description": "Secure WebSocket server for Ollama with public key authentication",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn src/index.ts",
    "dev:nodemon": "nodemon",
    "setup": "node scripts/setup-server.js",
    "generate-keys": "node scripts/generate-keys.js",
    "register-client": "node scripts/register-client.js",
    "list-clients": "node scripts/list-clients.js",
    "revoke-client": "node scripts/revoke-client.js",
    "backup-clients": "node scripts/backup-clients.js",
    "test": "jest",
    "test:security": "jest security",
    "test:server": "jest server",
    "test:challenge": "jest challenge",
    "test:auth": "jest auth",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:only": "jest -t",
    "docker:build": "docker build -t ollama-ws-system .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:restart": "npm run docker:stop && npm run docker:start",
    "docker:logs": "docker-compose logs -f",
    "help": "node scripts/help.js"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.10",
    "@types/node-fetch": "^2.6.6",
    "@types/ws": "^8.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
